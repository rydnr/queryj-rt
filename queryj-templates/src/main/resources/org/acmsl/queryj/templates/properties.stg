group properties;

property_resultset_retrieval(attr, C) ::= <<
<!
 Generates the code to retrieve the property value from the ResultSet.
 @param property the property.
 @param C the context.
!>
<if(!attr.clob)>resultSet.get<attr.objectType>("<attr.name>")<else><clob_resultset_retrieval(attribute=attr, C=C)><endif>
>>

clob_resultset_retrieval(attribute, C) ::= <<
<!
 Deals with Clob attributes
 @param attr the attribute.
 @param C the context.
 !>preparedStatement.getClob("<attribute.name>")
 >>

